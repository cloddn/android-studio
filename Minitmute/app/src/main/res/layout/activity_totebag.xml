<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Totebag"
    android:fillViewport="true"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9">

        <Button
            android:id="@+id/info_text"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="MINITMUTE"
            android:textSize="50px"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"

            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/totebag"
            android:layout_weight="1">
        </ImageView>

        <TextView
            android:id="@+id/totebag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tote Bag;"
            android:textSize="50px"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/totebag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="미닛뮤트 미니멀 라인의 토터백 입니다. 이태리 MASTROTTO 테너리의 엠보슈렁큰 타입으로 불규칙하고 자연스러운 엠보가 특징입니다. 기스에 강하고 코팅 처리가 되어 수분에도 매우 강해  데일리로 편하게 사용 가능합니다. 가볍게 언제든 가지고 나갈 수 있도록 무게감을 최소화 하기 위하여 잠금장치 외 기타 부자재를 넣지 않고 군더더기 없이 디자인하였습니다."
            android:textSize="40px"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/totehome"
            android:layout_marginTop="20dp"
            android:text="링크로 연결"
            android:textColor="@color/black"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/lemon"
            >
        </Button>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/totebag_1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="50px"
            >
        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/totebag_2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="50px"
            >
        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/totebag_3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="50px"
            >
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/totebag_4"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="50px"
            >
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/totebag_5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="50px"
            >
        </ImageView>

    </LinearLayout>

</ScrollView>
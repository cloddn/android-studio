<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="fill_vertical">
            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="MiNITMUTE"
                android:textSize="50px"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/minitmutemain"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="50px"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        //브렛백
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/brettbag"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/brettbag"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="BrettBag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25px"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        //리무드백
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/remoodbag"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/remoodbag"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:text="3way Remood Bag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25px"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        //크래커백
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crackerbag"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/crackerbag"
                android:scaleType="centerCrop">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/crackerbag2"

                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="Cracker Bag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25px"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />
        //아리백
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/aribag"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/aribag"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:text="Ari Bag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25px"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        //ToteBag

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/totebag"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/totebag"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:text="ToteBag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25px"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>


</ScrollView>